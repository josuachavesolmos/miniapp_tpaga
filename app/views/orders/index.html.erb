<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Purchase details url</th>
      <th>Voucher url</th>
      <th>Idempotency token</th>
      <th>Order</th>
      <th>Terminal</th>
      <th>Purchase description</th>
      <th>Purchase items</th>
      <th>User ip address</th>
      <th>Expires at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.cost %></td>
        <td><%= order.purchase_details_url %></td>
        <td><%= order.voucher_url %></td>
        <td><%= order.idempotency_token %></td>
        <td><%= order.order_id %></td>
        <td><%= order.terminal_id %></td>
        <td><%= order.purchase_description %></td>
        <td><%= order.purchase_items %></td>
        <td><%= order.user_ip_address %></td>
        <td><%= order.expires_at %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

